@model IEnumerable<EmployeeManagement.Models.empmodel>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<div class="mt-3">
    <div>
        <a href="@Url.Action("Add","Employee")" class="btn btn-primary"> Add New</a>
    </div>
</div>

<div class="mt-4">
    <div class="table-responsive">
        <table class="table table-bordered ">
            <tr>
                <th colspan="12" class="text-center">
                    Employe Details
                </th>
            </tr>
            <tr>
                <th>
                    EmployeeID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Designation
                </th>
                <th>
                    Email
                </th>
                <th>
                    MobileNo
                </th>
                <th>
                    Address
                </th>
                <th>
                    Salary
                </th>
                <th>
                    Rank
                </th>
                <th>
                    Bonus
                </th>
                <th>
                    Department
                </th>
                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Designation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MobileNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rank)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bonus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentName)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Add", new { id = item.EmployeeID }, new { @class = "fa fa-edit" }) |
                        @Html.ActionLink(" ", "Delete", new { id = item.EmployeeID }, new { @class = "fa fa-trash" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
